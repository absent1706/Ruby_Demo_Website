<% provide(:title, "Reset password") %>
<h1>Reset password</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for :reset_password,url: reset_password_path do |f| %>
			<%= f.label :email %>
			<%= f.text_field :email %>
    		<%= f.submit "Reset password", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>